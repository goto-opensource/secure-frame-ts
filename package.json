{
  "name": "sframe.ts",
  "version": "1.0.0",
  "description": "This is a TypeScript fork of medooze's sframe JavaScript library, including updates of the Secure Frame Internet-Draft https://datatracker.ietf.org/doc/draft-ietf-sframe-enc/",
  "license": "BSD-3-Clause",
  "main": "lib/src/index.js",
  "types": "lib/src/index.d.ts",
  "type": "module",
  "files": [
    "example/*",
    "docs/*",
    "lib/*",
    "src/*",
    "test/*",
    "*.md"
  ],
  "scripts": {
    "build": "tsc --build && npm run build:webpack && npm run build:inline",
    "build:inline": "node ./scripts/inline-base64-content.mjs lib/example/webpack.Worker.js lib/example/Base64Worker.js",
    "build:testpage": "webpack --config webpack.deploy.cjs",
    "build:webpack": "webpack --config webpack.config.cjs",
    "clean": "tsc --build --clean",
    "coverage": "c8 npm run test",
    "format": "npm run lint --fix",
    "lint": "eslint --ext .ts --cache ./src ./test",
    "test": "npm run build && mocha",
    "testpage": "webpack serve --config webpack.deploy.cjs"
  },
  "devDependencies": {
    "@types/chai": "4.3.4",
    "@types/chrome": "0.0.204",
    "@types/clone": "2.1.1",
    "@types/mocha": "10.0.1",
    "@types/sinon": "10.0.13",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "@webpack-cli/serve": "2.0.1",
    "benchmark": "^2.1.4",
    "c8": "7.12.0",
    "chai": "4.3.7",
    "comlink": "4.3.1",
    "copy-webpack-plugin": "11.0.0",
    "eslint": "8.29.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-mocha": "10.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "esm": "3.2.25",
    "mocha": "10.2.0",
    "mocha-better-spec-reporter": "3.1.0",
    "mocha-junit-reporter": "2.2.0",
    "mocha-multi-reporters": "1.5.1",
    "mocha-pretty-spec-reporter": "0.1.0-beta.2",
    "mocha-slow-test-reporter": "0.1.2",
    "prettier": "2.8.1",
    "sinon": "15.0.0",
    "typescript": "4.9.4",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.11.1"
  }
}
